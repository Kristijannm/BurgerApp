@model List<Order>

@{
    ViewBag.Title = "Orders List";
}
<div class="row mb-3">
    <div class="col d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Orders List</h2>
        <a asp-controller="Order" asp-action="CreateOrder" class="btn btn-success btn-lg">Create New Order</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Burger Name</th>
            <th>Price</th>
            <th>Address</th>
            <th>City</th>
            <th>Is Delivered</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.FullName</td>
                <td>@order.Burger.Name</td>
                <td>@order.Burger.Price</td>
                <td>@order.Address</td>
                <td>@order.Location</td>
                <td>@(order.IsDelivered ? "Yes" : "No")</td>
                <td>
                    <a asp-controller="Order" asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
