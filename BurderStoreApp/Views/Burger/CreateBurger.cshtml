@model Burger

@{
    ViewData["Title"] = "Create New Burger";
}

<div class="container">
    <h2>Create a New Burger</h2>
    <form asp-action="CreateBurger" method="post" class="mt-3">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="IsVegetarian" class="form-check-input" />
            <label asp-for="IsVegetarian" class="form-check-label"></label>
            <span asp-validation-for="IsVegetarian" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="IsVegan" class="form-check-input" />
            <label asp-for="IsVegan" class="form-check-label"></label>
            <span asp-validation-for="IsVegan" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="HasFries" class="form-check-input" />
            <label asp-for="HasFries" class="form-check-label"></label>
            <span asp-validation-for="HasFries" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-controller="Burger" asp-action="BurgerMenu" class="btn btn-secondary">Cancel</a>
    </form>
</div>
